<GridPane xmlns:fx="http://javafx.com/fxml/1" id="login_pane_root"
	alignment="center" gridLinesVisible="false" hgap="10" vgap="3"
	AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0"
	fx:controller="viewControllers.EventController">
	<children>
		<Label id="username" Text="Username" GridPane.columnIndex="0"
			GridPane.rowIndex="0" />
		<Label id="password" Text="Password" GridPane.columnIndex="1"
			GridPane.rowIndex="0" />
		<Text id="login_fail_text" fill="A70000"
			text="Sorry, this account did not match our records" visible="false"
			GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
		<TextField id="username_input"
			editable="true" onAction="#tryLogin" promptText="User Name"
			GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<PasswordField id="password_input"
			editable="true" onAction="#tryLogin" promptText="Password"
			GridPane.columnIndex="1" GridPane.rowIndex="1">
		</PasswordField>

	</children>
	<columnConstraints>
		<ColumnConstraints />
		<ColumnConstraints />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
	</rowConstraints>
</GridPane>